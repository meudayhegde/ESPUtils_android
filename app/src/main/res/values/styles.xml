<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryDark">@color/sky_blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorAccent">@color/sky_blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="android:navigationBarColor" >@color/blue_dark</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/layout_border_round_corner</item>
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorAccent">@color/sky_blue_light</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="ActivityAsDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue_light</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:navigationBarColor" >@color/blue_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--designs for login and register-->
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="headerText" parent="parent">
        <item name="android:textSize">@dimen/text_size_title_large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="headerTextPrimary" parent="headerText">
        <item name="android:textColor">@color/sky_blue</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:backgroundTint" >@color/sky_blue</item>
    </style>

    <style name="textFieldLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/edit_text_bg</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/edit_text_bg_white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/login_button_bk</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogAnimationTheme">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="ActivityStartAnimationTheme">
        <item name="android:windowEnterAnimation">@anim/fade_in_fast</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!--onboarding designs-->

</resources>
