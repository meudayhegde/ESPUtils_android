<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            tools:context=".ui.fragments.AboutFragment">

        <ImageView
                android:layout_width="120sp"
                android:id="@+id/icon_app_about"
                android:layout_height="120sp"
                android:layout_marginTop="@dimen/margin_max"
                android:contentDescription="@string/about_app"
                android:src="@drawable/circuit_dark" />

        <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                app:cardElevation="4dp"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="@dimen/margin_high">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingStart="@dimen/margin_high"
                    android:paddingEnd="@dimen/margin_high"
                    android:text="@string/about_app"
                    android:textColor="@color/sky_blue_variant_1"
                    android:textSize="@dimen/text_size_title_large"
                    app:drawableStartCompat="@drawable/icon_info"
                    app:drawableTint="@color/sky_blue_variant_1"
                    tools:targetApi="m" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                app:cardUseCompatPadding="true"
                android:descendantFocusability="blocksDescendants"
                app:cardElevation="4dp"
                app:cardCornerRadius="6dp"
                android:layout_margin="10sp">

            <TextView
                    android:id="@+id/about_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnBackground"
                    android:layout_marginTop="@dimen/margin_high"
                    android:layout_marginBottom="@dimen/margin_high"
                    android:paddingStart="@dimen/margin_medium"
                    android:paddingEnd="@dimen/margin_medium"
                    android:textSize="@dimen/text_size_subtitle_large" />

        </com.google.android.material.card.MaterialCardView>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22sp"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="12sp"
                android:layout_marginBottom="6sp"
                android:text="@string/libraries_used"
                android:textColor="@color/sky_blue_variant_1"
                android:textSize="15sp"
                android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="6sp"
                android:descendantFocusability="blocksDescendants">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:id="@+id/fab_license"
                    android:background="?attr/selectableItemBackground">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/floating_action_button"
                        android:textColor="@color/sky_blue_variant_1"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="10dp"
                        android:text="Copyright © Dmytro Tarianyk\nApache License, Version 2.0\nhttps://github.com/Clans/FloatingActionButton"
                        android:layout_marginBottom="15dp"
                        android:textColor="?attr/colorOnBackground"
                        tools:ignore="HardcodedText" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="6sp"
                android:descendantFocusability="blocksDescendants">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:id="@+id/pikolo_license"
                    android:background="?attr/selectableItemBackground">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/pikolo_colorpicker"
                        android:textColor="@color/sky_blue_variant_1"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="10dp"
                        android:text="Copyright © Madrapps\nApache License, Version 2.0\nhttps://github.com/Madrapps/Pikolo"
                        android:layout_marginBottom="15dp"
                        android:textColor="?attr/colorOnBackground"
                        tools:ignore="HardcodedText" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="6sp"
                android:descendantFocusability="blocksDescendants">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:id="@+id/material_license"
                    android:background="?attr/selectableItemBackground">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/material_components_android"
                        android:textColor="@color/sky_blue_variant_1"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="10dp"
                        android:text="Copyright © material-components\nApache License, Version 2.0\nhttps://github.com/material-components/material-components-android"
                        android:layout_marginBottom="15dp"
                        android:textColor="?attr/colorOnBackground"
                        tools:ignore="HardcodedText" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>

