<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="100sp" />
            <gradient android:startColor="#000000"
                    android:centerColor="#777777"
                    android:endColor="#cfcfcf"
                    android:angle="270"
                    android:centerX="35%"
                    android:type="linear"/>
            <stroke android:color="#777777"
                    android:width="4sp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100sp" />
            <gradient android:startColor="#222222"
                    android:centerColor="#555555"
                    android:endColor="#bbbbbb"
                    android:angle="270"
                    android:centerX="35%"
                    android:type="linear"/>
            <stroke android:color="#555555"
                    android:width="4sp"/>
        </shape>
    </item>
</selector>